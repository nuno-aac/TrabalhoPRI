extends layout

block content
  .w3-container.w3-margin.w3-amber.w3-border
    .w3-container-w3-red
        h2 Registo de utilizador:
    form.w3-container(action='/users/register' method='POST')
        label Username:
        input.w3-input(type="text" name="id")
        label Password:
        input.w3-input(type="password" name="password")
        label Email:
        input.w3-input(type="text" name="email")
        label Age:
        input.w3-input(type="number" name="age")
        input(type="hidden" name="access" value=0)
        input.w3-btn.w3-red(type="submit" value="Enviar")